<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/item_list_fragment">

    <fragment
        android:id="@+id/item_list_fragment"
        android:name="com.hekkelman.keylocker.fragments.KeyListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/show_key_detail"
            app:destination="@+id/key_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/key_detail_fragment"
        android:name="com.hekkelman.keylocker.fragments.KeyDetailFragment"
        android:label="@string/title_activity_key_detail"
        tools:layout="@layout/fragment_key_detail">
        <argument
            android:name="key_id"
            android:defaultValue=""
            app:argType="string"/>
    </fragment>

</navigation>